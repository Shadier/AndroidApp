<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SerieDescription">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingHorizontal="20dp"
            android:paddingBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imgCoverD"
                android:layout_width="150dp"
                android:layout_height="220dp"/>
            <TextView
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/imgCoverD"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/txtNameD"
                android:text="Legacies"
                android:textSize="22sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/txtNameD"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/txtStatusD"
                android:text="Legacies"
                android:textSize="20sp"
                android:textColor="#999"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/txtStatusD"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/txtDescriptionD"
                android:textSize="20sp"
                android:textColor="#999"
                android:layout_weight="1"
                android:ellipsize="none"
                android:maxLines="100"
                android:scrollHorizontally="false"
                android:justificationMode="inter_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>